{
  "family": "fuse-worker-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::160885246465:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::160885246465:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "fuse-worker",
      "image": "twentycrm/twenty:latest",
      "command": ["yarn", "worker:prod"],
      "essential": true,
      "environment": [
        {
          "name": "PG_DATABASE_URL",
          "value": "postgresql://neondb_owner:npg_xrjvZAYd5eQ2@ep-young-mode-aehs53oa-pooler.c-2.us-east-2.aws.neon.tech/default?sslmode=require&channel_binding=require"
        },
        {
          "name": "SERVER_URL",
          "value": "https://fuse.yourdomain.com"
        },
        {
          "name": "REDIS_URL",
          "value": "redis://YOUR_REDIS_ENDPOINT:6379"
        },
        {
          "name": "DISABLE_DB_MIGRATIONS",
          "value": "true"
        },
        {
          "name": "APP_SECRET",
          "value": "YOUR_GENERATED_SECRET"
        },
        {
          "name": "STORAGE_TYPE",
          "value": "s3"
        },
        {
          "name": "STORAGE_S3_REGION",
          "value": "us-east-1"
        },
        {
          "name": "STORAGE_S3_NAME",
          "value": "fuse-s3-bucket-2025"
        },
        {
          "name": "STORAGE_S3_ENDPOINT",
          "value": "https://s3.us-east-1.amazonaws.com"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fuse-worker",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}